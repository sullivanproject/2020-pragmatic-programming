{
  "name": "just-news",
  "version": "1.0",
  "description": "뉴스 기사의 본문을 정돈해서 보여줍니다.",
  "manifest_version": 2,
  "icons": {
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://mediahub.seoul.go.kr/archives/*",
        "*://www.bloter.net/archives/*"
      ],
      "js": ["app.js"],
      "run-at": "document_idle"
    }
  ]
}
